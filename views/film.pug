doctype html
html(lang="en")
    head
        link(rel="stylesheet", href="styles.css")
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        
        title title
    body 
    .container
        .nav
            a(href=`/movies`, class="btn") Home
            a(href=`/movies/${movie.id}/update`, class="btn") Update
            a(href=`/movies/${movie.id}/delete`, class="btn") Delete
        h3 #{movie.title}
        p #{movie.runtime} minutes
        p #{movie.releaseDate}
        if movie.isAvailableOnVHS 
            p Available on VHS
        else 
            p Not Available on VHS
